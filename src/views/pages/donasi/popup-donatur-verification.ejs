<div class="modal fade bs-example-modal-xl" tabindex="-1" role="dialog" aria-labelledby="detail<%= idx %>"
   id="detail<%= detail.id %>id" data-target="#detail<%= detail.id %>id" aria-hidden="true">
   <div class="modal-dialog modal-xl">
      <div class="modal-content">
         <div class="modal-header">
            <h5 class="modal-title" id="detail<%= idx %>">
               Verifikasi Akun Donatur
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
         </div>
         <div class="modal-body">
            <div class="row">
               <div class="col-xl-6 col-lg-12">
                  <h4 class="font-size-16 mb-3">Informasi </h4>
                  <div class="table-responsive">
                     <table class="table bg-blue-grey">
                        <tbody>
                           <tr>
                              <th>Nama Donatur </th>
                              <td>
                                 <%= detail.nama %>
                              </td>
                           </tr>
                           <tr>
                              <th>Email </th>
                              <td>
                                 <%= detail.email %>
                              </td>
                           </tr>
                           <tr>
                              <th>No. Handphone </th>
                              <td>
                                 <%= detail.noTelp %>
                              </td>
                           </tr>
                           <tr>
                              <th>Alamat </th>
                              <td>
                                 <%= detail.alamat %>
                              </td>
                           </tr>
                           <tr>
                              <th>Status </th>
                              <td>
                                 <% if(detail.status==="VERIFIED" ) { %>
                                    <span class="badge bg-success">
                                       <%- detail.status %>
                                    </span>
                                    <% } else if(detail.status==="PENDING" ) { %>
                                       <span class="badge bg-warning">
                                          <%- detail.status %>
                                       </span>
                                       <% } else if (detail.status==="REJECT" ) { %>
                                          <span class="badge bg-danger">
                                             <%- detail.status %>
                                          </span>
                                          <% } %>
                              </td>
                           </tr>
                        </tbody>
                     </table>
                  </div>


               </div>

               <!-- <div class="col-xl-8 col-lg-6">
                  <h4 class="font-size-16 mb-3">Bukti Transaksi</h4>
                  <% if (detail.photo) { %>
                     <div class="card">
                        <img class="card-img-top img-fluid" src="<%= detail.photo %>" alt="">
                     </div>
                     <% } else { %>
                        <div class="alert alert-warning">
                           Tidak ada bukti transaksi.
                        </div>
                        <% } %>
               </div> -->
            </div>
         </div>

         <div class="modal-footer">
            <form class="custom-validation" action="<%= detail.url_verified %>" method="post">
               <button type="submit" class="btn btn-primary waves-effect waves-ligh" data-bs-dismiss="modal"
                  action="submit">VERIFIED</button>
            </form>
            <form class="custom-validation" action="<%= detail.url_rejected %>" method="post">
               <button type="submit" class="btn btn-danger" data-bs-dismiss="modal">REJECT</button>
            </form>
         </div>
      </div>
   </div>

</div>