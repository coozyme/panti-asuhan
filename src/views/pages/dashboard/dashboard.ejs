<%- include('../../partials/header.ejs', {session: session}) -%>

   <div class="main-content">
      <div class="page-content">
         <div class="container-fluid">

            <!-- start page title -->
            <div class="page-title-box">
               <div class="row align-items-center">
                  <div class="col-md-8">
                     <h6 class="page-title">Dashboard</h6>
                     <!-- <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item active">Welcome to Veltrix Dashboard</li>
                     </ol> -->
                  </div>
               </div>
            </div>
            <!-- end page title -->

            <div class="row">
               <div class="col-xl-3 col-md-6">
                  <div class="card mini-stat bg-primary text-white">
                     <div class="card-body">
                        <div class="mb-2">
                           <div class="float-start mini-stat-img me-4">
                              <img src="assets/images/services-icon/01.png" alt="">
                           </div>
                           <h5 class="font-size-16 text-uppercase text-white-50">ANAK ASUH</h5>


                           <h4 class="fw-medium font-size-24">
                              <%= totalAnakAsuh %>
                           </h4>
                        </div>
                        <div class="pt-2">
                           <p class="text-white-50 mb-0 mt-1">Jumlah Anak Asuh</p>
                        </div>
                     </div>
                  </div>
               </div>
               <div class="col-xl-3 col-md-6">
                  <div class="card mini-stat bg-primary text-white">
                     <div class="card-body">
                        <div class="mb-2">
                           <div class="float-start mini-stat-img me-4">
                              <img src="assets/images/services-icon/01.png" alt="">
                           </div>
                           <h5 class="font-size-16 text-uppercase text-white-50">DONATUR</h5>
                           <h4 class="fw-medium font-size-24">
                              <%= donasiVerified %>
                        </div>
                        <div class="pt-2">
                           <p class="text-white-50 mb-0 mt-1">Jumlah donatur yang telah berpartisipasi</p>
                        </div>
                     </div>
                  </div>
               </div>
               <div class="col-xl-3 col-md-6">
                  <div class="card mini-stat bg-primary text-white">
                     <div class="card-body">
                        <div class="mb-2">
                           <div class="float-start mini-stat-img me-4">
                              <img src="assets/images/services-icon/01.png" alt="">
                           </div>
                           <h5 class="font-size-16 text-uppercase text-white-50">Total DONASI</h5>
                           <h4 class="fw-medium font-size-24">
                              <%= totalDonasi %>
                        </div>
                        <div class="pt-2">
                           <p class="text-white-50 mb-0 mt-1">Jumlah donasi yang telah terverifikasi</p>
                        </div>
                     </div>
                  </div>
               </div>
               <div class="col-xl-3 col-md-6">
                  <div class="card mini-stat bg-primary text-white">
                     <div class="card-body">
                        <div class="mb-2">
                           <div class="float-start mini-stat-img me-4">
                              <img src="assets/images/services-icon/01.png" alt="">
                           </div>
                           <h5 class="font-size-16 text-uppercase text-white-50">DONASI</h5>
                           <h4 class="fw-medium font-size-24">
                              <%= donasiBelumVerified %>
                        </div>
                        <div class="pt-2">
                           <p class="text-white-50 mb-0 mt-1">Donasi yang belum terverifikasi</p>
                        </div>
                     </div>
                  </div>
               </div>

            </div>
            <!-- end row -->

            <div class="row">
               <div class="col-lg-6">
                  <div class="card">
                     <div class="card-body">
                        <h4 class="card-title mb-4">Validasi donasi</h4>
                        <div class="table-responsive" data-simplebar style="max-height: 500px;">
                           <table class="table table-hover table-centered table-nowrap mb-0">
                              <thead>
                                 <tr>
                                    <!-- <th scope="col">(#) Id</th> -->
                                    <th scope="col">Donatur</th>
                                    <th scope="col">Jumlah</th>
                                    <th scope="col">Tanggal</th>
                                    <th scope="col" colspan="2">Status</th>
                                 </tr>
                              </thead>
                              <tbody>
                                 <% for(var i=0; i < dataUnalidationDonasi.length; i++) { %>
                                    <tr>
                                       <!-- <th scope="row">#14256</th> -->
                                       <td>
                                          <div>
                                             <!-- <img src="assets/images/users/user-2.jpg" alt=""
                                                class="avatar-xs rounded-circle me-2"> -->
                                             <%=dataUnalidationDonasi[i].donatur%>
                                          </div>
                                       </td>
                                       <td>
                                          <%=dataUnalidationDonasi[i].jumlah%>
                                       </td>
                                       <td>
                                          <%=dataUnalidationDonasi[i].tanggal_submit%>
                                       </td>
                                       <td><span class="badge bg-success">
                                             <%=dataUnalidationDonasi[i].status_verifikasi%>
                                          </span></td>
                                       <!-- <td>
                                          <div>
                                             <a href="#" class="btn btn-primary btn-sm">Edit</a>
                                          </div>
                                       </td> -->
                                    </tr>
                                    <% } %>
                              </tbody>
                           </table>
                        </div>
                     </div>
                  </div>
               </div>
               <div class="col-lg-6">
                  <div class="card">
                     <div class="card-body">
                        <h4 class="card-title mb-4">Activity</h4>
                        <div data-simplebar style="max-height: 500px;">
                           <ol class="activity-feed">
                              <% for(var i=0; i < log.length; i++) { %>
                                 <% if(log[i].type=="donasi" ) { %>
                                    <li class="feed-item">
                                       <div class="feed-item-list">
                                          <span class="date">
                                             <% log[i].tanggal_submit %>
                                          </span>
                                          <span class="activity-text">Donasi dari <%= log[i].donatur %> sebesar <%=
                                                   log[i].jumlah %></span>
                                       </div>
                                    </li>
                                    <% } else if (log[i].type=="login" ) { %>
                                       <li class="feed-item">
                                          <div class="feed-item-list">
                                             <span class="date">
                                                <% log[i].tanggal_login %>
                                             </span>
                                             <span class="activity-text">
                                                <%= log[i].nama %> telah masuk kedalam sistem
                                             </span>
                                          </div>
                                       </li>
                                       <% } %>
                                          <% } %>

                           </ol>
                        </div>
                     </div>
                  </div>
               </div>
            </div>


         </div> <!-- container-fluid -->
      </div>
   </div>
   <!-- End Page-content -->


   <%- include('../../partials/footer.ejs') -%>