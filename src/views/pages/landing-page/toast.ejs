<div class="toast-container position-fixed bottom-0 end-0 p-3">
   <% if (locals.toasts && toasts.length> 0) { %>
      <% toasts.forEach((toast, index)=> { %>
         <div class="toast <%= toast.autohide ? 'auto-hide' : '' %>" role="alert" aria-live="assertive"
            aria-atomic="true" data-toast-id="<%= index %>" data-bs-autohide="<%= toast.autohide %>"
            data-bs-delay="<%= toast.delay || 3000 %>">
            <div class="toast-header">
               <div class="bg-<%= toast.type || 'primary' %> rounded me-2" style="width: 20px; height: 20px;"></div>
               <strong class="me-auto">
                  <%= toast.title %>
               </strong>
               <small>
                  <%= toast.timestamp || 'Just now' %>
               </small>
               <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
               <%= toast.message %>
            </div>
         </div>
         <% }); %>
            <% } %>
</div>