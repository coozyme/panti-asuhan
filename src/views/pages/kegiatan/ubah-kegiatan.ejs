<%- include('../../partials/header.ejs', {session: session}) -%>

   <div class="main-content">

      <div class="page-content">
         <div class="container-fluid">
            <!-- start page title -->
            <div class="page-title-box">
               <div class="row align-items-center">
                  <div class="col-md-8">
                     <h6 class="page-title">Ubah Kegiatan</h6>
                  </div>
                  <!-- <div class="col-md-4">
                     <div class="float-end d-none d-md-block">
                        <a href="/anak-asuh/tambah-anak-asuh">
                           <button type="button" class="btn btn-primary waves-effect waves-light" data-bs-toggle="modal"
                              data-bs-target=".bs-example-modal-center">
                              <i class="fas fa-save"></i> Simpan</button>
                        </a>
                     </div>
                  </div> -->
               </div>
            </div>
            <!-- end page title -->
            <div class="row">
               <form class="custom-validation" action="/kegiatan/edit-kegiatan/<%=data.id%>" method="post"
                  enctype="multipart/form-data">
                  <div class="col-lg-12">
                     <div class="card">
                        <div class="card-body">
                           <h4 class="card-title mb-4">Ubah Kegiatan</h4>

                           <div class="mb-3">
                              <label class="form-label" for="kegiatan">Kegiatan</label>
                              <input type="text" class="form-control" name="kegiatan" required
                                 value="<%=data.kegiatan%>" placeholder="Masukkan kegiatan">
                           </div>
                           <div class="mb-3">
                              <label class="form-label" for="deskripsi">deskripsi</label>
                              <div>
                                 <textarea name="deskripsi" class="form-control" rows="5"
                                    placeholder="Masukan deskripsi"><%=data.keterangan%></textarea>
                              </div>
                           </div>
                           <div class="mb-3">
                              <label class="form-label" for="tanggalKegiatan">Tanggal Kegiatan</label>
                              <div class="input-group" id="datepicker2">
                                 <input type="text" class="form-control" placeholder="dd M yyyy" name="tanggalKegiatan"
                                    required data-date-format="dd M yyyy" data-date-container='#datepicker2'
                                    value="<%=data.tanggal%>" data-provide="datepicker" data-date-autoclose="true">

                                 <span class="input-group-text"><i class="mdi mdi-calendar"></i></span>
                              </div>
                           </div>
                           <div class="mb-3">
                              <label class="form-label" for="thumbnail">Thumbnail</label>
                              <input name="file" type="file" accept="image/png, image/jpeg, image/jpg">
                           </div>
                           <% if(data.thumbnail) { %>
                              <div class="mb-5">
                                 <label class="form-label>">Thumbnail Now</label>
                                 <!-- <img src="<%=data.thumbnail%>" alt="thumbnail" class="img-fluid" style="width: 100px"> -->
                                 <div class="row">
                                    <div class="col-md-6">
                                       <img class="img-thumbnail rounded me-2" alt="200x200" width="200"
                                          src="<%=data.thumbnail%>" data-holder-rendered="true">
                                    </div>
                                 </div>
                              </div>
                              <% } %>
                                 <div class="mb-3">
                                    <label class="form-label" for="thumbnail">Photo Kegiatan</label>
                                    <input name="file" type="file" accept="image/png, image/jpeg, image/jpg" multiple>
                                 </div>
                                 <% if(photos.length> 0 ) { %>
                                    <label class="form-label>">Photos</label>
                                    <div class="row">
                                       <% photos.map((p)=> { %>
                                          <div class="col-md-6">
                                             <img class="rounded" alt="200x200" width="200" src="<%=p%>"
                                                data-holder-rendered="true">
                                          </div>
                                          <% }) %>
                                    </div>
                                    <% } %>
                                       <!-- end form -->
                        </div><!-- end cardbody -->
                     </div><!-- end card -->
                     <!-- end col -->
                     <div class="mb-0">
                        <div>
                           <button type="submit" class="btn btn-primary waves-effect waves-light me-1">
                              Submit
                           </button>
                        </div>
                     </div>
               </form>
            </div>
         </div>
      </div>
   </div>
   <!-- end row -->
   <%- include('../../partials/footer.ejs') -%>